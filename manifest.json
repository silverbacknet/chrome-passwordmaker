{
  "background": {
    "scripts": ["javascript/background.js"]
  },
  "browser_action": {
    "default_icon": "images/passwdmaker48.png",
    "default_popup": "html/popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Z"
      }
    }
  },
  "applications": {
    "gecko": {
	  "id": "passwordmakerpro@yb171.org"
    }
  },
  "description": "Flexible password generator using a cryptographic hash algorithm of your choice - Fully Compatible with PasswordMaker.org",
  "homepage_url": "https://github.com/yb171/chrome-passwordmaker",
  "icons": {
    "16": "images/passwdmaker16.png",
    "48": "images/passwdmaker48.png",
    "128": "images/passwdmaker128.png"
  },
  "manifest_version": 2,
  "name": "PasswordMaker Pro",
  "options_ui": { 
	"page": "html/options.html"
  },
  "permissions": ["activeTab", "storage", "alarms", "clipboardWrite", "downloads"],
  "version": "0.8.5.3beta2"
}
